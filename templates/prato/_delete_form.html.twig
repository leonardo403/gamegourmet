<form method="post" action="{{ path('prato_delete', {'id': prato.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method"  value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ prato.id) }}">
    <button class="btn btn-info" role="button">Delete</button>
</form>
